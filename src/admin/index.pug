extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container
        header.hero__header.header
          a.header__logo(href="#") ВА
          nav.header__menu.menu
            - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
            ul.menu__list
            each item in menuItems
              li.menu__item
                a(href="#").hero__link #{item}
          
          -var socials = ["insta", "vk", "github", "envelope"];
          ul.hero__socials.socials
            each item in socials
              li.socials__item
                a(href="").socials__link
                  +icon(item, "socials__icon")

        .hero__userinfo.userinfo
          .userinfo__title Личный сайт веб разработчика
          .userinfo__name Владимир Астаханов

        .hero__bottom-buttons
          button.hero__scroll-down-btn Скролл




extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        
        include ./components/header.pug

        include ./components/hero.pug

    section.about
      .container.about__container
        .about__user.user
        
          include ./components/user.pug
          
        include ./components/about.pug

  .middle-section
    section.values
      .container.values__container
        include ./components/values.pug

          ul.values__skills.skills
            each category in skillsCategories
              li.skills__item
                .skills__row
                  .skills__row-title #{category[0]}
                  ul.skills__row-list
                    each skill in category[1]
                      li.skills__row-item
                        .skills__list.skill
                          svg(viewbox="0 0 100 100").skill__cirlce-shape
                            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                            circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__circle.skill__circle--layer--above
                            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                              stop(offset="0%" stop-color="#5500f2")
                              stop(offset="100%" stop-color="#8f00ef")

                          .skill__title #{skill}

          

.about__content {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.about__container {
    opacity: 0;
    transform: translateY(20%);
    transition: .5s all ease-in-out;
    display: flex;
    padding: 5% 16%;

    @include desktop {
        padding: 98px 50px 152px 31px;
    }

    @include tablets {
        padding: 60px 20px 48px 20px;
    }

    @include phones {
        padding: 0px 0px 105px 0px;
        display: flex;
        flex-direction: column;
    }
}

.about__desc > p {
    font-weight: 600;
    font-size: 16px;
    font-weight: 400;
    color: #464d62;
    opacity: 0.5;
}

.about__title {
    font-weight: 700;
    font-size: 36px;
    color: $text-color;
    padding-top: 30px;

    @include phones {
        width: 40%;
    }
}

.about__ps {
    position: relative;
    padding-top: 105px;
    font-style: italic;

    &:before {
        content: url(../images/decor/star.png);
        position: absolute;
        left: -50px;
    }

    @include phones {
        padding-top: 48px;
    }
}

.about__text-info {
    padding-top: 38px;

    @include phones {
        padding-top: 52px;
    }
}
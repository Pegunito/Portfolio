.socials {
    display: flex;

    @include tablets {
        padding-right: 93px;
    }

    @include phones {

        &--header {
            display: none;
        }
    }

    @include phones {
        padding-right: 0;
    }
}

.socials__icon {
    width: 25px;
    height: 25px;
    fill: $text-color;

    &:hover {
        fill: #4B6FD7;
        transition: .3s;
    }
}

.socials__item {
    margin-right: 30px;

    &:last-child {
        margin-right: 0;
    }
}
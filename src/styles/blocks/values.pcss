.values__container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 5% 0%;

    &:before {
        content: "";
        position: absolute;
        background: url('~images/decor/bag.jpg') left bottom / contain no-repeat;
        display: block;
        bottom: 5%;
        height: 79%;
        width: 50%;
        left: -20%;
    }
}

.values__info {
    margin-bottom: 96px;
}

.values__title > h2 {
    margin-bottom: 59px;
    display: flex;
    justify-content: center;
    font-size: 30px;
    font-weight: 700;
}

.values__content {
    padding: 0 24%;
}

.values__content > p {
    font-size: 16px;
    font-weight: 400;
    opacity: 0.5;
    color: #464d62;
}

.values__widget {
    display: flex;
    justify-content: flex-end;
}

